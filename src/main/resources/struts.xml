<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">    

<struts>

	<constant name="struts.action.extension" value="action" />   
    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.objectFactory.spring.autoWire" value="auto" />
    <constant name="struts.locale" value="zh_CN" />
    <constant name="struts.i18n.encoding" value="UTF-8" />
    <constant name="struts.custom.i18n.resources" value="/message/messageResource" />
    
    <!-- 重写文件上传解析方法  -->  
    <constant name="struts.multipart.handler" value="jakarta" />
    <constant name="struts.multipart.maxSize" value="10485760"/> <!-- 设置最大的图片为10M -->
    <constant name="struts.multipart.saveDir" value="/home/anghouser/appdata/tempimages"/>
    <constant name="struts.convention.action.disableJarScanning" value="true"/>
    
    <include file="struts-web.xml"/> 

</struts>
